      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>

  <div class="pagination" style="height:30px;">
    <%= paginate @bill_tos %>
  </dev>

    <% @bill_tos.each do |bill_to| %>
      <tr>
        <td><%= check_box_tag 'bill_to_ids[]', bill_to.id, true, {} %></td>
        <td><%= bill_to.name %></td>
        <td><%= bill_to.phone_num_1 %></td>
        <td><%= bill_to.email_1 %></td>
        <td><%= link_to '編集', edit_bill_to_path(bill_to), { class: "btn btn-link" } %></td>
